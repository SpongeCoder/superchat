.price
	.wrapp
		h1 Честная цена за услуги
		
		.price-chat
			h2 Онлайн-консультант
			h3 без абонентской платы
			.price-chat__blocks
				.price-chat-block.price-chat-block--gray
					.price-chat-block__head
					.price-chat-block__footer
					
					.price-chat-info
						.price-chat-info__count 20
						.price-chat-info__count-text Чатов
						.price-chat-info__line

						.price-chat-info__price 290 <span class="rub">&#8381;</span>
						.price-chat-info__price-text 14,5 <span class="rub">&#8381;</span> за чат
					
				.price-chat-block.price-chat-block--blue
					.price-chat-block__head
					.price-chat-block__footer
					
					.price-chat-info
						.price-chat-info__count 40
						.price-chat-info__count-text Чатов
						.price-chat-info__line

						.price-chat-info__price 390 <span class="rub">&#8381;</span>
						.price-chat-info__price-text 9,8 <span class="rub">&#8381;</span> за чат

				.price-chat-block.price-chat-block--blue-dark
					.price-chat-block__head
					.price-chat-block__footer
					
					.price-chat-info
						.price-chat-info__count 70
						.price-chat-info__count-text Чатов
						.price-chat-info__line

						.price-chat-info__price 490 <span class="rub">&#8381;</span>
						.price-chat-info__price-text 7 <span class="rub">&#8381;</span> за чат
				.clear
			
			.price-chat__text
				.price-chat__info Количество сайтов <br>и операторов не ограничено
				.price-chat__info В конце месяца <br>чаты не “сгорают”
				.line

		.price-callback
			h2.price-callback__title Обратный звонок
			.price-callback-block
				.price-callback-block__head 
					h2 Поминутная тарификация
				.price-callback-block__footer
					div для коротких разговоров

				.price-block
					- for (var i = 0; i < 4; i++)						
						.price-block__item
							.price-block__count 50
							.price-block__count-text минут
							.price-block__line
							.price-block__price 850 <span class="rub">&#8381;</span>
			
				.clear
				
			.price-callback-block
				.price-callback-block__head
					h2 Оплата за звонки
				.price-callback-block__footer
					div для длительных консультаций

				.price-block
					- for (var i = 0; i < 4; i++)						
						.price-block__item
							.price-block__count 15
							.price-block__count-text звонков
							.price-block__line
							.price-block__price 10 000 <span class="rub">&#8381;</span>
				.clear
			.clear